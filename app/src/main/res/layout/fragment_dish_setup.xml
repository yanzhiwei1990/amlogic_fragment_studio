<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center_vertical|center_horizontal"
    android:background="#37474F"
    android:gravity="center_vertical|center_horizontal"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/set_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="DISH SETUP"
            android:textColor="#B3EEEEEE"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/satellite_related"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:weightSum="7.5" >

        <LinearLayout
            android:id="@+id/satellite_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3.5"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/listview_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:text="Satellite"
                android:textColor="@color/common_text_color"
                android:textSize="14sp" />

            <com.example.fragment.ItemListView
                android:id="@+id/listview_item"
                android:layout_width="350dp"
                android:layout_height="300dp"
                android:layout_marginRight="5dp"
                android:background="@color/common_item_background"
                android:clickable="true"
                android:divider="?android:attr/listDividerAlertDialog"
                android:focusable="true"
                android:footerDividersEnabled="false"
                android:headerDividersEnabled="false" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/satellite_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/listview_option_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:text="Ku_NewSat2"
                android:textColor="@color/common_text_color"
                android:textSize="14sp" />

            <com.example.fragment.ItemListView
                android:id="@+id/listview_option"
                android:layout_width="400dp"
                android:layout_height="300dp"
                android:layout_marginLeft="5dp"
                android:background="@color/common_item_background"
                android:clickable="true"
                android:divider="?android:attr/listDividerAlertDialog"
                android:focusable="true"
                android:footerDividersEnabled="false"
                android:headerDividersEnabled="false" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/satellite_quickkey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal"
        android:weightSum="7.5" >

        <LinearLayout
            android:id="@+id/function_key1"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="3.5"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/circle_red"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_brightness_red_30dp" />

            <TextView
                android:id="@+id/textView_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/circle_red"
                android:gravity="center_vertical|center_horizontal"
                android:paddingRight="20dp"
                android:text="ADD"
                android:textColor="#B3EEEEEE"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/circle_blue"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_brightness_blue_30dp" />

            <TextView
                android:id="@+id/textView_scan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|center_horizontal"
                android:paddingRight="20dp"
                android:text="SCAN"
                android:textColor="#B3EEEEEE"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/circle_yellow"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_brightness_yellow_30dp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/textView_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|center_horizontal"
                android:paddingRight="20dp"
                android:text="DELETE"
                android:textColor="#B3EEEEEE"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/circle_green"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_brightness_green_30dp" />

            <TextView
                android:id="@+id/textView_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|center_horizontal"
                android:text="EDIT"
                android:textColor="#B3EEEEEE"
                android:textSize="14sp" />
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/function_key2"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="4"
            android:gravity="center_vertical|center_horizontal" >

            <TextView
                android:id="@+id/icon_goto"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:background="@drawable/ring_white"
                android:gravity="center_vertical|center_horizontal"
                android:lines="2"
                android:text="GO\nTO"
                android:textColor="@color/common_white"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/textView_setallite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|center_horizontal"
                android:paddingRight="20dp"
                android:text="SATALLITE"
                android:textColor="#B3EEEEEE"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/icon_ok"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ring_white"
                android:gravity="center_vertical|center_horizontal"
                android:lines="2"
                android:text="OK"
                android:textColor="@color/common_white"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/textView_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|center_horizontal"
                android:paddingRight="20dp"
                android:text="SELECT"
                android:textColor="#B3EEEEEE"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/icon_exit"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ring_white"
                android:gravity="center_vertical|center_horizontal"
                android:lines="2"
                android:text="EXIT"
                android:textColor="@color/common_white"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/textView_exit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|center_horizontal"
                android:paddingRight="20dp"
                android:text="EXIT"
                android:textColor="#B3EEEEEE"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView_wheel"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/direction_key"
                android:gravity="center_vertical|center_horizontal"
                android:paddingRight="20dp"
                android:textColor="#B3EEEEEE"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>